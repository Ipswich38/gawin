{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "Local filesystem access for reading and writing files",
      "capabilities": ["read_file", "write_file", "list_directory", "create_directory"]
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": ""
      },
      "description": "Web search capabilities using Brave Search API",
      "capabilities": ["web_search", "news_search"]
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      },
      "description": "GitHub repository and issue management",
      "capabilities": ["repository_access", "issue_management", "file_operations"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "./data/gawin.db"],
      "description": "Local SQLite database for persistent storage",
      "capabilities": ["database_query", "data_storage"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "In-memory data storage and retrieval",
      "capabilities": ["memory_storage", "data_persistence"]
    }
  },
  "gawin": {
    "name": "Gawin AI Assistant",
    "version": "1.0.0",
    "capabilities": {
      "tools": true,
      "resources": true,
      "prompts": true
    },
    "preferences": {
      "primary_mcp_server": "filesystem",
      "fallback_order": ["groq", "huggingface", "educational_fallback"],
      "enable_tool_discovery": true,
      "max_tool_calls_per_request": 5
    }
  }
}